{{#each model as |todo index|}}
	<div class="w-full flex content-center mb-3">

		<div class="w-4/5 bg-white border-l-8 border-hatch-secondary p-2 shadow flex-auto mr-2" role="alert">
			{{textarea value=todo.description  class="w-full h-full font-bold mb-1 text-hatch-base"}}
		</div>

			<div class="flex-auto flex flex-col justify-between">

				<div class="w-4 text-center flex items-center">
				<button class="bg-red-600 hover:bg-red-600 text-white font-bold rounded-full">
	  			UPDATE
				</button>
			</div>

			<div class="w-4 text-center flex items-center">
				<button class="bg-red-600 hover:bg-blue-700 text-white font-bold rounded-full">
	  			DELETE
				</button>
			</div>	

		</div>
		

	</div>
{{/each}}
	
	
